<div class="main-container min-h-screen w-full bg-[#f7f4e9]" style="font-family: 'Playfair', serif; background-color: #fffef3">
  <div class="container max-w-6xl mx-auto px-8">
    <!-- Navigation Bar -->
    <section id = "home-taskbar" class = "w-full border-[#442D1C]">
      <div class = "max-w-6xl mx-auto flex justify-between items-center py-4 px-4">
        <!-- Left links -->
        <nav class = "flex gap-6 text-sm tracking-[0.25em] uppercase font-medium">
          <%= link_to "Discover", discover_path, class: "text-[#442D1C] navbar-link hover:text-[#403c2b]" %> <!-- Discover link -->
          <%= link_to "Profile", profile_path, class: "text-[#442D1C] navbar-link hover:text-[#403c2b]" %> <!-- Profile link -->
        </nav>
        <!-- Centered GooderReads -->
        <a href = "/" 
           style = "font-family: 'Playfair Display', serif;" 
           class = "text-3xl text-[#442D1C] text-center font-bold navbar-link">
          GooderReads
        </a>
        <!-- Right links -->
        <nav class="flex gap-6 text-sm tracking-[0.25em] uppercase font-medium">
          <%= link_to "My Reads", my_reads_path, class: "text-[#442D1C] navbar-link hover:text-[#403c2b]" %> <!-- My Reads link -->
          <%= link_to "Reviews", bookclub_path, class: "text-[#442D1C] navbar-link hover:text-[#403c2b]" %>
        </nav>
      </div>
      <!-- Divider -->
      <p class="mt-4 border-t border-[#c2b38b] pt-3"></p>
    </section>
    <!-- Dev Selected Book -->
    <% if @dev_book.present? %>
      <section id="dev-book" 
               class="max-w-4xl mx-auto p-8 mb-12 bg-white rounded-xl shadow hover:shadow-lg transition-transform transform hover:-translate-y-1"
               style="font-family: 'Playfair', serif; color: #403c2b;">
        <div class="flex flex-col md:flex-row gap-6">
          <% if @dev_book&.cover_image&.attached? %>
            <%= image_tag @dev_book.cover_image,
                alt: @dev_book.title,
                class: "w-48 h-72 object-cover rounded shadow" %>
          <% else %>
            <%= image_tag "placeholder.jpg",
                alt: "No cover available",
                class: "w-48 h-72 object-cover rounded shadow" %>
          <% end %>
          <div class="flex flex-col justify-center">
            <h2 class="text-3xl font-semibold mb-2"><%= @dev_book.title %></h2>
            <p class="italic mb-4 text-[#78793f]">by <%= @dev_book.author %></p>
            <% if @dev_book.review.present? %>
              <p class="text-gray-700 leading-relaxed"><%= @dev_book.review %></p>
            <% else %>
              <p class="text-gray-500 italic">No review available for this book.</p>
            <% end %>
            <a href="<%= book_path(@dev_book) %>" 
               class="mt-4 inline-block text-[#403c2b] hover:text-[#78793f] font-semibold transition-colors">
              View Book â†’
            </a>
          </div>
        </div>
      </section>
    <% else %>
      <section id="dev-book-placeholder" 
               class="max-w-4xl mx-auto p-8 mb-12 bg-white rounded-xl shadow hover:shadow-lg transition-transform transform hover:-translate-y-1 text-center text-[#403c2b]">
        <%= image_tag "placeholder.jpg", alt: "No book found", class: "w-48 h-72 object-cover rounded shadow mx-auto" %>
        <h2 class="text-xl font-semibold mt-4">No Featured Book Available</h2>
        <p class="text-gray-500">Add a book to get started!</p>
      </section>
    <% end %>
    <!-- Books Section -->
    <div id="books-section">
      <!-- Books Header -->
      <section class="max-w-4xl mx-auto p-8 mb-12 bg-white rounded-xl shadow hover:shadow-lg transition-transform transform hover:-translate-y-1">
        <div class="flex justify-between items-center">
          <div>
            <h2>Want to add a Book?
              <%= link_to "Add Book",
                new_book_path,
                class: "px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700" %>
            </h2>
          </div>
        </div>
      </section>
      <!-- Recommended Reads By Genre -->
      <section id="recommended" class="p-8 bg-white rounded-xl shadow hover:shadow-lg transition-transform transform hover:-translate-y-1">
        <h2 class="text-4xl text-center text-[#403c2b] mb-10" style="font-family: 'Playfair Display', serif;">
          Recommended Reads By Genre
        </h2>
        <% if @recommended_books.present? %>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
            <% @recommended_books.each do |genre, book| %>
              <div class="flex flex-col items-center text-center">
                <h3 class="text-xl font-semibold mb-4 text-[#403c2b]"><%= genre.name %></h3>
                <a href="<%= book_path(book) %>"
             class="block bg-white p-4 rounded-xl shadow hover:shadow-lg transition-transform transform hover:-translate-y-1 w-full">
                  <% if book.cover_image.attached? %>
                    <%= image_tag book.cover_image,
                  alt: book.title,
                  class: "w-full h-60 object-cover rounded" %>
                  <% else %>
                    <%= image_tag "placeholder.jpg",
                  alt: "No cover available",
                  class: "w-full h-60 object-cover rounded" %>
                  <% end %>
                  <h4 class="mt-2 text-lg font-semibold text-[#403c2b]"><%= book.title %></h4>
                  <p class="text-sm text-gray-500 italic"><%= book.author %></p>
                </a>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-center text-gray-500 mt-8">No recommended books available yet.</p>
        <% end %>
      </section>
    </div>
  </div>
</div>
