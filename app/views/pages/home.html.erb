<div class="main-container w-full">
  <div class="container mx-auto">
    <!-- Navigation Bar -->
    <section id="home-taskbar" class="w-full flex flex-col px-8">
      <div class="w-full flex space-x-4 mb-8">
        <a href="#" class="text-4xl hover:text-gray-500">GooderReads</a>
        <a href="#" class="font-sans text-3xl hover:text-gray-500">Discover</a>
        <a href="#" class="font-sans text-3xl hover:text-gray-500">My Read</a>
        <a href="#" class="font-sans text-3xl hover:text-gray-500">Book Club</a>
      </div>
      <!-- Dev Selected Book -->
      <% if @dev_book.present? %>
        <section id="dev-book" class="max-w-4xl mx-auto p-8 mb-12 bg-white rounded-lg shadow">
          <div class="flex flex-col md:flex-row gap-6">
            <%= image_tag @dev_book.cover_url.presence || "placeholder.jpg",
                    alt: @dev_book.title,
                    class: "w-48 h-72 object-cover rounded shadow" %>
            <div class="col-xl-3 col-md-6 col-12">
              <h2 class="text-2xl font-semibold mb-2"><%= @dev_book.title %></h2>
              <p class="text-gray-600 mb-4">by <%= @dev_book.author %></p>
              <p><%= @dev_book.review %></p>
            </div>
          </div>
        </section>
      <% else %>
        <section id="dev-book-placeholder" class="max-w-4xl mx-auto p-8 mb-12 bg-white rounded-lg shadow text-center">
          <%= image_tag @dev_book.cover_file.present? ? asset_path(@dev_book.cover_file) : "placeholder.jpg",
              alt: @dev_book.title,
              class: "w-48 h-72 object-cover rounded shadow" %>
          <h2 class="text-xl font-semibold mt-4">No books found</h2>
          <p class="text-gray-600">Add a book to get started!</p>
        </section>
      <% end %>
      <!-- Recommended Reads By Genre -->
      <section id="recommended" class="p-8 bg-gray-50">
        <h2 class="text-3xl mb-8">Recommended Reads By Genre</h2>
        <% @recommended_books.each do |genre, books_in_genre| %>
          <h3 class="text-2xl font-sans mb-4"><%= genre %></h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
            <% books_in_genre.each do |book| %>
              <a href="<%= book_path(book) %>" class="block bg-white p-4 rounded-lg shadow hover:shadow-lg transition">
                <%= image_tag book.cover_file.present? ? asset_path(book.cover_file) : "placeholder.jpg",
                  alt: book.title,
                  class: "w-full h-60 object-cover rounded" %>
                <h4 class="mt-2 text-lg"><%= book.title %></h4>
                <p class="text-gray-500 text-sm"><%= book.author %></p>
              </a>
            <% end %>
          </div>
        <% end %>
      </section>
    </section>
  </div>
</div>
