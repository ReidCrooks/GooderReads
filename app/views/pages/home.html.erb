<div class="main-container min-h-screen w-full" style="font-family: 'Playfair', serif;">
  <div class="container max-w-6xl mx-auto px-8">

    <!-- Navigation Bar -->
    <section id="home-taskbar" class="w-full">
      <div class="max-w-6xl mx-auto flex justify-between items-center py-6">
        <!-- Left links -->
        <nav class="flex gap-6 text-lg tracking-[0.25em] uppercase text-[#78793f]">
          <a href="#" class="hover:text-[#403c2b]">Discover</a>
          <a href="#" class="hover:text-[#403c2b]">Profile</a>
        </nav>

        <!-- Centered GooderReads -->
        <a href="/" 
           style="font-family: 'Playfair Display', serif;" 
           class="text-4xl text-[#403c2b] text-center hover:text-[#78793f] transition-colors">
          GooderReads
        </a>

        <!-- Right links -->
        <nav class="flex gap-6 text-lg tracking-[0.25em] uppercase text-[#78793f]">
          <a href="#" class="hover:text-[#403c2b]">My Reads</a>
          <a href="#" class="hover:text-[#403c2b]">Book Club</a>
        </nav>
      </div>

      <!-- Divider -->
      <p class="mt-4 border-t border-[#c2b38b] pt-3"></p>
    </section>

    <!-- Dev Selected Book -->
    <% if @dev_book.present? %>
      <section id="dev-book" 
               class="max-w-4xl mx-auto p-8 mb-12 bg-white rounded-xl shadow hover:shadow-lg transition-transform transform hover:-translate-y-1"
               style="font-family: 'Playfair', serif; color: #403c2b;">
        <div class="flex flex-col md:flex-row gap-6">
          <%= image_tag @dev_book.cover_url.presence || "placeholder.jpg",
                        alt: @dev_book.title,
                        class: "w-48 h-72 object-cover rounded shadow" %>
          <div class="flex flex-col justify-center">
            <h2 class="text-3xl font-semibold mb-2"><%= @dev_book.title %></h2>
            <p class="italic mb-4 text-[#78793f]">by <%= @dev_book.author %></p>
            <% if @dev_book.review.present? %>
              <p class="text-gray-700 leading-relaxed"><%= @dev_book.review %></p>
            <% else %>
              <p class="text-gray-500 italic">No review available for this book.</p>
            <% end %>
            <a href="<%= book_path(@dev_book) %>" 
               class="mt-4 inline-block text-[#403c2b] hover:text-[#78793f] font-semibold transition-colors">
              View Book â†’
            </a>
          </div>
        </div>
      </section>
    <% else %>
      <section id="dev-book-placeholder" class="max-w-4xl mx-auto p-8 mb-12 bg-white rounded-xl shadow text-center text-[#403c2b]">
        <%= image_tag "placeholder.jpg", alt: "No book found", class: "w-48 h-72 object-cover rounded shadow mx-auto" %>
        <h2 class="text-xl font-semibold mt-4">No Featured Book Available</h2>
        <p class="text-gray-500">Add a book to get started!</p>
      </section>
    <% end %>

    <!-- Recommended Reads By Genre -->
    <section id="recommended" class="p-8 bg-gray-50">
      <h2 class="text-4xl text-center text-[#403c2b] mb-10" style="font-family: 'Playfair Display', serif;">
        Recommended Reads By Genre
      </h2>

      <% if @recommended_books.present? %>
        <% @recommended_books.each do |genre, books_in_genre| %>
          <h3 class="text-2xl font-semibold mb-4 text-[#403c2b]"><%= genre %></h3>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12">
            <% books_in_genre.each do |book| %>
              <a href="<%= book_path(book) %>" 
                 class="block bg-white p-4 rounded-lg shadow hover:shadow-lg transition transform hover:-translate-y-1">
                <%= image_tag book.cover_file.present? ? asset_path(book.cover_file) : "placeholder.jpg",
                  alt: book.title,
                  class: "w-full h-60 object-cover rounded" %>
                <h4 class="mt-2 text-lg font-semibold text-[#403c2b]"><%= book.title %></h4>
                <p class="text-sm text-gray-500 italic"><%= book.author %></p>
              </a>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center text-gray-500 mt-8">No recommended books available yet.</p>
      <% end %>
    </section>

  </div>
</div>
