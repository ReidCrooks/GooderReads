<div class="min-h-screen flex items-center justify-center bg-[#fffef3] px-4 py-12">
  <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-center text-[#403c2b]">
      Log in
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>
      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>
      <!-- Remember Me Checkbox -->
      <% if devise_mapping.rememberable? %>
        <div class="remember-me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <!-- Submit Button -->
      <div class="mb-6">
        <%= f.submit "Log in",
              class: "w-full bg-[#403c2b] text-white py-2 rounded hover:bg-[#78793f] transition-colors" %>
      </div>
    <% end %>
    <!-- Links: Forgot password & Sign up -->
    <div class="flex flex-col items-center mt-4 space-y-2 text-center">
      <%= link_to "Forgot your password?", new_password_path(resource_name),
            class: "text-[#403c2b] hover:text-[#78793f] underline" %>
      <%= link_to "New here? Create an account", new_registration_path(resource_name),
            class: "text-[#403c2b] hover:text-[#78793f] underline" %>
    </div>
  </div>
</div>
