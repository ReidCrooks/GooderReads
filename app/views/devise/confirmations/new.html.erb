<div class="min-h-screen flex items-center justify-center bg-[#fffef3] px-4 py-12">
  <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg">
    <h2 class="text-2xl font-semibold mb-6 text-center text-[#403c2b]">
      Create an Account
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Name Field -->
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              value: resource.email,
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <!-- Confirm Password Field -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <!-- Remember me checkbox (if needed) -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
      <% end %>

      <!-- Submit button -->
      <div class="mb-6">
        <%= f.submit "Sign Up", 
              class: "w-full bg-[#403c2b] text-white py-2 rounded hover:bg-[#78793f] transition-colors" %>
      </div>
    <% end %>

    <!-- Links -->
    <div class="flex flex-col gap-2 text-center">
      <%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "text-[#403c2b] hover:text-[#78793f]" %>
    </div>
  </div>
</div>
