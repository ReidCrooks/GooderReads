<div class="min-h-screen flex items-center justify-center bg-[#fffef3] px-4 py-16">
  <div class="max-w-md w-full bg-white p-8 rounded-xl shadow-lg">
    
    <h2 class="text-2xl font-semibold mb-6 text-center text-[#403c2b]">
      Edit Your Profile
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Name Field -->
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.text_field :name, value: resource.name,
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <!-- Email Field -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, autocomplete: "email",
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="text-sm text-gray-600 mb-3">
          Waiting for confirmation: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- Password Field -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
        <p class="text-xs text-gray-500 mb-1">(Leave blank if you don't want to change it)</p>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>

        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <!-- Confirm Password -->
      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <!-- Current Password -->
      <div class="mb-6">
        <%= f.label :current_password, class: "block text-gray-700 font-medium mb-1" %>
        <p class="text-xs text-gray-500 mb-1">(We need your current password to confirm your changes)</p>
        <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#403c2b]" %>
      </div>

      <!-- Submit -->
      <div class="mb-4">
        <%= f.submit "Update",
              class: "w-full bg-[#403c2b] text-white py-2 rounded hover:bg-[#78793f] transition-colors" %>
      </div>
    <% end %>

    <!-- Back link -->
    <div class="text-center mt-4">
      <%= link_to "Back", :back, class: "text-[#403c2b] hover:text-[#78793f]" %>
    </div>

    <!-- Cancel Account -->
    <div class="mt-8 text-center">
      <p class="text-gray-700 mb-2">Unhappy?</p>
      <%= button_to "Cancel my account", registration_path(resource_name),
            method: :delete,
            data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
            class: "bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600" %>
    </div>

  </div>
</div>
