<section class="max-w-4xl mx-auto p-8 bg-white rounded-lg shadow">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">All Books</h1>
    <%= link_to "Add Book", new_book_path, class: "px-4 py-2 rounded bg-blue-600 text-white hover:bg-blue-700" %>
  </div>
  <ul>
    <% @books.each do |book| %>
      <li class="flex items-center gap-4 mb-4">
        <% if book.cover_image.attached? %>
          <%= image_tag(book.cover_image, alt: book.title, width: 80) %>
        <% else %>
          <%= image_tag("placeholder.jpg", alt: "Placeholder image", width: 80) %> <!-- Placeholder image if no cover is attached -->
        <% end %>
        <div>
          <h2 class="text-xl font-semibold">
            <%= link_to book.title, book_path(book), class: "hover:underline" %>
          </h2>
          <p class="text-gray-700">by <%= book.author %></p>
        </div>
      </li>
    <% end %>
  </ul>
</section>
