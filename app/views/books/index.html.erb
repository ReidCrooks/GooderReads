<h1>All Books</h1>
<ul>
  <% @books.each do |book| %>
    <li>
      <% if book.cover_image.attached? %>
        <%= image_tag(book.cover_image, alt: book.title, width: 80) %>
      <% else %>
        <%= image_tag("placeholder.jpg", alt: "Placeholder image", width: 80) %>
      <% end %>
      <%= book.title %> by <%= book.author %>
    </li>
  <% end %>
</ul>
