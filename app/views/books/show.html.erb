<section class="max-w-2xl mx-auto p-8 bg-white rounded-lg shadow">
  <h1 class="text-3xl font-bold mb-4"><%= @book.title %></h1>
  <p class="mb-2 text-gray-700"><strong>Author:</strong> <%= @book.author %></p>
  <p class="mb-2 text-gray-700"><strong>Rating:</strong> <%= @book.rating %>/5</p>
  <p class="mb-2 text-gray-700"><strong>Genre:</strong> <%= @book.genre %></p>
  <% if @book.description.present? %> <!--display description if present-->
    <div class="mt-4">
      <h2 class="text-xl font-semibold mb-2">Description</h2>
      <p class="text-gray-800"><%= @book.description %></p>
    </div>
  <% end %>
  <% if @book.cover_image.attached? %> <!--display cover image if attached-->
    <div class="my-4">
      <%= image_tag @book.cover_image, class: "max-h-64 rounded shadow" %>
    </div>
  <% end %>
  <div class="mt-4">
    <h2 class="text-xl font-semibold mb-2">Review</h2>
    <p class="text-gray-800"><%= @book.review %></p>
  </div>
  <div class="mt-6">
    <%= link_to "Back to Home", home_path, class: "text-blue-600 hover:underline" %>
  </div>
</section>
